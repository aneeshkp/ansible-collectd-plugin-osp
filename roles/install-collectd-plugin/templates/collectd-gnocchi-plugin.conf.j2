<LoadPlugin python>
  Globals true
</LoadPlugin>

<Plugin python>
    ModulePath "/usr/lib/python2.7/site-packages/collectd_ceilometer"
    LogTraces true
    Interactive false
    Import "collectd_ceilometer.gnocchi.plugin"

    <Module "collectd_ceilometer.gnocchi.plugin">

        # Verbosity True|False
        VERBOSE True

        # Batch size
        BATCH_SIZE "1"

        # Service endpoint addresses
        OS_AUTH_URL "http://{{haproxy_ip_address.stdout}}:35357"

        # Ceilometer address
        CEILOMETER_URL_TYPE "http://{{haproxy_ip_address.stdout}}:8777"

        # Ceilometer timeout in ms
        CEILOMETER_TIMEOUT "1000"

        # # Ceilometer user creds
        OS_USERNAME "gnocchi"
        OS_PASSWORD "{{gnocchi_password.stdout}}"
        OS_TENANT_NAME "service"

    </Module>
</Plugin>
