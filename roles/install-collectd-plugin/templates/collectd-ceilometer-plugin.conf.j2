<LoadPlugin python>
  Globals true
</LoadPlugin>

<Plugin python>
    ModulePath "/usr/lib/python2.7/site-packages/collectd_ceilometer"
    LogTraces true
    Interactive false
    Import "collectd_ceilometer.plugin"

    <Module "collectd_ceilometer.plugin">


        # Verbosity True|False
        VERBOSE False

        # Batch size
        BATCH_SIZE "1"

        # Service endpoint addresses
        OS_AUTH_URL "http://{{haproxy_ip_address.stdout}}:5000/v2.0"

        # Ceilometer address
        CEILOMETER_URL_TYPE "internalURL"

        # Ceilometer timeout in ms
        CEILOMETER_TIMEOUT "1000"

        # # Ceilometer user creds
        OS_USERNAME "ceilometer"
        OS_PASSWORD "{{ceilometer_password.stdout}}"
        OS_TENANT_NAME "service"

    </Module>
</Plugin>