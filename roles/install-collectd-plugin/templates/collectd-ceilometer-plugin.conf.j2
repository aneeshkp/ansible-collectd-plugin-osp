<LoadPlugin python>
  Globals true
</LoadPlugin>

<Plugin python>
    ModulePath "{{collectd-ceilometer-plugin_module_path}}"
    LogTraces true
    Interactive false
    Import "collectd_ceilometer.ceilometer.plugin"

    <Module "collectd_ceilometer.ceilometer.plugin">

        # Verbosity True|False
        VERBOSE False

        # Batch size
        BATCH_SIZE "1"

        # Service endpoint addresses
        OS_AUTH_URL "http://{{haproxy_ip_address.stdout}}:5000/v3"

        # Ceilometer address
        CEILOMETER_URL_TYPE "http://{{haproxy_ip_address.stdout}}:8777"

        # Ceilometer timeout in ms
        CEILOMETER_TIMEOUT "1000"

        # # Ceilometer user creds
        OS_USERNAME "ceilometer"
        OS_PASSWORD "{{ceilometer_password}}"
        OS_TENANT_NAME "service"

      <UNITS>
      </UNITS>
    </Module>
</Plugin>